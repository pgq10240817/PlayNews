<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/inteterminate_status_progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_retangle_theme_f_corner"
    android:gravity="center" >

    <ProgressBar
        android:id="@id/emptyview_progress"
        style="@style/Common.Progress"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        style="@style/Indeterminate.Hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/emptyview_progress" />

</RelativeLayout>